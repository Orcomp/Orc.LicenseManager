<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net46;net47;netcoreapp3.0</TargetFrameworks>
    <AssemblyName>Orc.LicenseManager.Client.WPF</AssemblyName>
    <RootNamespace>Orc.LicenseManager</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orc.LicenseManager.Client.WPF</PackageId>
    <PackageVersion>1.0.0-alpha0001</PackageVersion>
    <Description>LicenseManager - WPF client library.</Description>
    <PackageTags>orc;license;client;xaml;wpf</PackageTags>
    <UseWpf>true</UseWpf>
  </PropertyGroup>

  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>3C2F09AC-F23F-439F-BB6F-A502241CA829</ProjectGuid>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Catel.Core" Version="5.11.1" />
    <PackageReference Include="Catel.Fody" Version="4.1.0" PrivateAssets="all" />
    <PackageReference Include="Catel.MVVM" Version="5.11.1" />
    <PackageReference Include="Fody" Version="5.1.1" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="4.2.0" PrivateAssets="all" />
    <PackageReference Include="MethodTimer.Fody" Version="3.0.0" PrivateAssets="all" />
    <PackageReference Include="ModuleInit.Fody" Version="2.0.0" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="5.0.0" PrivateAssets="all" />
    <PackageReference Include="WpfAnalyzers" Version="2.2.0.2" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Orc.LicenseManager.Client\Orc.LicenseManager.Client.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.1" />
  </ItemGroup>

  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>